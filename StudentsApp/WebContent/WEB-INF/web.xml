<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>StudentsApp</display-name>
  <welcome-file-list>
    <welcome-file>view/Login.html</welcome-file>
    
  </welcome-file-list>
 <servlet>
 <servlet-name>LoginServlet</servlet-name>
 <servlet-class>com.app.servlet.LoginServlet</servlet-class>
 <load-on-startup>1</load-on-startup>
 </servlet> 
 <servlet-mapping>
 <servlet-name>LoginServlet</servlet-name>
 <url-pattern>/login</url-pattern>
 </servlet-mapping>
 
 <servlet>
 <servlet-name>Welcome</servlet-name>
 <servlet-class>com.app.servlet.WelcomePageServlet</servlet-class>
 <load-on-startup>1</load-on-startup>
 </servlet> 
 <servlet-mapping>
 <servlet-name>Welcome</servlet-name>
 <url-pattern>/welcome</url-pattern>
 </servlet-mapping>
 
 <servlet>
 <servlet-name>StudentSearchServlet</servlet-name>
 <servlet-class>com.app.servlet.StudentSearchServlet</servlet-class>
 <load-on-startup>1</load-on-startup>
 </servlet> 
 <servlet-mapping>
 <servlet-name>StudentSearchServlet</servlet-name>
 <url-pattern>/sss</url-pattern>
 </servlet-mapping>
 
 <servlet>
 <servlet-name>CreateProfileServlet</servlet-name>
 <servlet-class>com.app.servlet.CreateProfileServlet</servlet-class>
 <load-on-startup>1</load-on-startup>
 </servlet> 
 <servlet-mapping>
 <servlet-name>CreateProfileServlet</servlet-name>
 <url-pattern>/cfs</url-pattern>
 </servlet-mapping>
 
 <servlet>
 <servlet-name>ChangePasswordServlet</servlet-name>
 <servlet-class>com.app.servlet.ChangePasswordServlet</servlet-class>
 <load-on-startup>1</load-on-startup>
 </servlet> 
 <servlet-mapping>
 <servlet-name>ChangePasswordServlet</servlet-name>
 <url-pattern>/cps</url-pattern>
 </servlet-mapping>
 
 <servlet>
 <servlet-name>LogoutServlet</servlet-name>
 <servlet-class>com.app.servlet.LogoutServlet</servlet-class>
 <load-on-startup>1</load-on-startup>
 </servlet> 
 <servlet-mapping>
 <servlet-name>LogoutServlet</servlet-name>
 <url-pattern>/ls</url-pattern>
 </servlet-mapping>
 
 
 <servlet>
 <servlet-name>ViewAllStudentsInfo</servlet-name>
 <servlet-class>com.app.servlet.ViewAllStudentsInfo</servlet-class>
 <load-on-startup>1</load-on-startup>
 </servlet> 
 <servlet-mapping>
 <servlet-name>ViewAllStudentsInfo</servlet-name>
 <url-pattern>/view</url-pattern>
 </servlet-mapping>
 
 <session-config>
    <session-timeout>2</session-timeout>
</session-config>
</web-app>